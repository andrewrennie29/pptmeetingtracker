<div class="panel-body">
<%= form_tag('/attendees/update', remote: true, html: { class: "form-inline", style: "display:inline;" }) do %>
	<div class="form-group form-group-sm">

		<% unless @attendees.nil? %>

			<% @attendees.each do |a| %>
				<div class="row">
					<%= hidden_field_tag 'attendees[' + a.id.to_s + '][id]', a.id  %>
					<div class="col-xs-2">
						<div class="btn-group btn-group-xs"	 data-toggle="buttons">
							<label class="btn btn-default<% if a.attendance %> active<% end %>">
								<input type="radio" name="attendees[<%= a.id %>][attendance]" id="option1" value="Attended" autocomplete="off" checked = <%= a.attendance %> > Attended
							</label>
							<label class="btn btn-default<% if a.proxy %> active<% end %>">
								<input type="radio" name="attendees[<%= a.id %>][attendance]" id="option2" value="Proxy" autocomplete="off" checked = <%= a.proxy %> > Proxy
							</label>
							<label class="btn btn-default<% if a.attendance == false && a.proxy == false  %> active<% end %>">
								<input type="radio" name="attendees[<%= a.id %>][attendance]" id="option3" value="Absent" autocomplete="off" <% if a.attendance == false && a.proxy == false  %> checked <% end %> > Absent
							</label>
						</div>
					</div>
					<div class="col-xs-3">
						<input type="text" name="attendees[<%= a.id %>][name]" class="form-control" placeholder=<%= a.dept %> value="<%= a.attendees %>" aria-describedby="basic-addon1">
					</div>	
				</div>
			<% end %>

		<% else %>

			<h4>Please generate your attendees</h4>
			
		<% end %>
	</div>
</div>	

<div class="panel-footer"><%= submit_tag "Save Attendees", class: "btn btn-primary btn-sm" %></div>

<% end %>

